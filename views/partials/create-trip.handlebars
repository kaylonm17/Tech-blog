  <h2 class="title">Create a new trip:</h2><hr>

  <form class="new-trip-form">
    <div>
      <label for="trip-title">What is the title of your trip?</label>
      <input class="input" type="text" id="trip-title" name="trip-title" placeholder="Add trip title"/>
    </div>
    <div>
      <label for="location">Where are you going?</label>
      <input type="textarea" id="location" name="location" placeholder="Add trip location"/>
    </div>
    <div>
      <label for="starting-date">When do you leave for your trip?</label>
      <input type="date" id="date" name="starting-date" placeholder="MM/DD/YYYY"/>
    </div>
     <div>
      <label for="ending-date">When does your trip end?</label>
      <input type="date" id="date" name="ending-date" placeholder="MM/DD/YYYY"/>
    </div>
    <div>
      <label for="trip-description">Add a description for your trip:</label>
      <input class="textarea" id="trip-description" name="trip-description" placeholder="Add a description of your trip"/>
    </div>
    <button type="submit" id="create-trip-btn" class="button is-link is-pulled-right">create trip</button>
  </form>
</section>

<script src="/js/add-trip.js"></script>