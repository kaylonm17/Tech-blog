    <!-- 
      If a logged-in user has posts, show them.
      If a logged-in user does not have a post, just show "create Post" button to create one.
      --> 
<div class="mb-5 pt-3">
  <a href="/dashboard/create/"><button id="create-trip" class="button is-link is-pulled-right">create trip</button></a>
  <h2 id="dashboard-title" class="title pb-4">My Trips</h2><hr>
{{#if trips.length}}
  <div  class="trip">
  {{#each trips as |trip|}}
    {{> trip-info trip}}
  </div> {{!-- Has to stay inside the loop --}}
  {{/each}}
{{else}}
  <h6 class="pb-4 has-text-centered is-italic">You do not have any trips yet</h6>
{{/if}}